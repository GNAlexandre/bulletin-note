<!-- Fin du Bootstrap-->

<body class="body2">
<div class="example-wrapper">
    <h1>Ajout d'une Classe :âœ…</h1>

    {% if is_granted('IS_AUTHENTICATED_FULLY') %} {# permet de verifier la connection #}
        <p>Username: {{ app.user.username }}</p>
    {% endif %}
    <form method="POST">
    <table>
        <tr>
            <td> Nom de l'Enseignant</td>
            <td> Matiere de l'Enseignant</td>
            <td> Ajout de Classe</td>
        </tr>

    {% for entite in Enseignants[0] %}

        <tr>
            <td>{{ entite.name }}</td>

            {% for entite2 in Enseignants[1]  %}

                {% if entite.getId_Matiere == entite2.getId %}

                    <td>{{ entite2.getNameMatiere }}</td>
                    <td>
                        <label for="">Numero de Classe</label>
                        <input type="number" name="Enseignant_{{ entite.getId }}">
                    </td>

                {% endif %}


            {% endfor %}



        </tr>

    {% endfor %}
    </table><br>
    <input type="submit">
    </form><br><br>

</div>
</body>
{% endblock %}
